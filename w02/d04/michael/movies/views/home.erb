<h1>Movies</h1>

<form action="/">
  <input type="text" name="movie_title" placeholder="Frozen">
  <input type="submit" value="Lookup Movie">
  </form>

  <% if @movie %>
  <h2><a href="https://ww.google.com/search?q=<%= @movie["Title"] %>"></a><%= @movie["Title"] %></h2>
  <img src="<%= @movie["Poster"] %>">

  <ul>
    <li>Year: <%= @movie["Year"] %></li>
    <li>Rated: <%= @movie["Rated"] %></li>
    <li>Released: <%= @movie["Released"] %></li>
    <li>Runtime: <%= @movie["Runtime"] %></li>
    <li>Runtime: <%= @movie["Genre"] %></li>
    <li>Director: <%= @movie["Director"] %></li>
  </ul>

  <% end %>
